<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/bg_run_map"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <include
        android:id="@+id/include_root_run_data"
        layout="@layout/include_run_data"/>

    <include
        android:id="@+id/include_root_run_map"
        layout="@layout/include_run_map"/>


    <RelativeLayout
        android:background="@color/colorPrimary"
        android:id="@+id/count_down_relat"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:visibility="gone"
            android:layout_centerInParent="true"
            android:id="@+id/count_1_iv"
            android:src="@drawable/count_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:visibility="gone"
            android:layout_centerInParent="true"
            android:id="@+id/count_2_iv"
            android:src="@drawable/count_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <ImageView
            android:visibility="gone"
            android:layout_centerInParent="true"
            android:id="@+id/count_3_iv"
            android:src="@drawable/count_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:visibility="gone"
            android:layout_centerInParent="true"
            android:id="@+id/count_4_iv"
            android:src="@drawable/count_go"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>


</FrameLayout>