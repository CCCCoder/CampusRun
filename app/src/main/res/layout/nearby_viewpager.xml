<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/viewpager_item_bg"
    android:layout_width="130dp"
    android:layout_height="160dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/person_icon_iv"
        android:layout_centerHorizontal="true"
        android:src="@drawable/len"
        android:layout_marginTop="10dp"
        android:layout_width="68dp"
        android:layout_height="68dp" />
    <TextView
        android:id="@+id/person_name_tv"
        android:text="哆啦A梦"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:textSize="15sp"

        android:layout_below="@id/person_icon_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/distance_linea"
        android:layout_marginTop="5dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/person_name_tv"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="15dp">

        <ImageView
            android:id="@+id/sex_iv"
            android:src="@drawable/girl"
            android:layout_width="20dp"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/distance_tx"
            android:layout_marginLeft="5dp"
            android:text="6.3km"
            android:textSize="12sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <TextView
        android:id="@+id/say_hello"
        android:text="打招呼"
        android:gravity="center"
        android:textSize="16sp"
        android:clickable="true"
        android:layout_marginBottom="5dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/viewpager_hello_bg"
        android:layout_marginTop="5dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/distance_linea"
        android:layout_width="94dp"
        android:layout_height="30dp" />


</RelativeLayout>