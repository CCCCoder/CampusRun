<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">

        <TextView
            android:text="锻炼计划"
            android:textSize="20sp"
            android:textColor="#fff"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/return_btn"
            android:background="@drawable/return_z"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:layout_width="25dp"
            android:layout_height="25dp" />
    </RelativeLayout>

    <ImageView
        android:src="@drawable/run"
        android:clickable="true"
        android:scaleType="centerCrop"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:id="@+id/run_image" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/exe_plan_rl"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="80dp">

            <TextView
                android:text="每日跑步路程(km)"
                android:textSize="18sp"
                android:textColor="#000"
                android:layout_marginLeft="15dp"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/exec_distance_tv"
                android:text="10"
                android:textSize="18sp"
                android:textColor="#000"
                android:background="@null"
                android:layout_marginRight="15dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>

        <ImageView
            android:background="#999"
            android:layout_width="match_parent"
            android:layout_height="1px" />

        <RelativeLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="80dp">

            <TextView
                android:text="提醒"
                android:textSize="18sp"
                android:textColor="#000"
                android:layout_marginLeft="15dp"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <CheckBox
                android:id="@+id/alarm_cb"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                android:checked="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>

        <ImageView
            android:background="#999"
            android:layout_width="match_parent"
            android:layout_height="1px" />

        <RelativeLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="80dp">

            <TextView
                android:text="提醒时间"
                android:textSize="18sp"
                android:textColor="#000"
                android:layout_marginLeft="15dp"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/alarmtime_tx"
                android:text="20:10"
                android:clickable="true"
                android:textSize="18sp"
                android:layout_marginRight="15dp"
                android:textColor="#000"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>

        <ImageView
            android:background="#999"
            android:layout_width="match_parent"
            android:layout_height="1px" />

    </LinearLayout>

    <Button
        android:id="@+id/submit_btn"
        android:text="保存"
        android:textColor="#fff"
        android:textSize="17sp"
        android:background="@drawable/btn_submit_bg"
        android:layout_marginTop="50dp"
        android:layout_gravity="center"
        android:layout_width="250dp"
        android:layout_height="40dp" />

</LinearLayout>